<div class="container">
  <div class="row">
    <h3 class="col">注文履歴一覧</h3>
  </div>

  <table>
    <thead>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </thead>
    <% @orders.each do |orders| %>
      <tbody>
        <tr>
          <td><%= orders.created_at %></td>
          <td>orders.name</td>
          <td>orders.Order_detail.amout</td>
          <td><%= orders.status %></td>
        </tr>
      </tbody>
    <% end %>

  </table>
</div>