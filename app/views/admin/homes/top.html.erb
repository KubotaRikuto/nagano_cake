<div class="container">
  <div class="row">
    <h3 class="col">注文履歴一覧</h3>
  </div>

  <table>
    <thead>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </thead>
    <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d %T') %></td>
          <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    <% end %>

  </table>
</div>