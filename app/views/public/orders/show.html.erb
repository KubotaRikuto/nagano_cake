public/order/show
<div class="container-fluid">
  <div class="row">
    <div class="offset-1">
      <h5><span class="px-3 bg-secondary">注文履歴詳細</span></h5>
    </div>
  </div>
  <div class="row">
    <!-- 注文情報 -->
    <div class="col">
      <div class="row">
        <p><strong>注文情報</strong></p>
      </div>
      <div class="row">
        <table class="table">
          <tbody>
            <tr>
              <th>注文日</th>
              <td>
                <%= @order.created_at.strftime('%Y/%m/%d') %>
              </td>
            </tr>
            <tr>
              <th>配送先</th>
              <td>
                〒<%= @order.shipping_postal_code %><br>
                <%= @order.shipping_address %><br>
                <%= @order.shipping_name %>
              </td>
            </tr>
            <tr>
              <th>支払方法</th>
              <td>
                <%= @order.payment_method_i18n %>
              </td>
            </tr>
            <tr>
              <th>ステータス</th>
              <td>
                <%= @order.status_i18n %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <!-- 請求情報 -->
    <div class="col">
      <div class="row">
        <p><strong>注文情報</strong></p>
      </div>
      <div class="row">
        <table class="table">
          <tbody>
            <tr>
              <th>商品合計</th>
              <td>
                <%= @order_item_total_price.to_s(:delimited) %>
              </td>
            </tr>
            <tr>
              <th>配送料</th>
              <td>
                <%= @order.postage.to_s(:delimited) %>
              </td>
            </tr>
            <tr>
              <th><strong>ご請求額</strong></th>
              <td>
                <%= @order.amount_billed.to_s(:delimited) %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="row">
    <p><strong>注文内容</strong></p>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <% @order.order_details.each do |order_detail| %>
      <tbody>
        <tr>
          <td>
            <%= order_detail.item.name %>
          </td>
          <td>
            <%= order_detail.item.with_tax_price %>
          </td>
          <td>
            <%= order_detail.amount %>
          </td>
          <td>
            <%= order_detail.subtotal %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>