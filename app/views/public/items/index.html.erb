<div class="container-fluid">
  <div class="row mt-4 mx-3">
    <div class="col-10 mx-auto">
      <div class="row">
        <div class="col-3 ml-2">
          <h2>商品一覧 <small style="font-size: 18px;">(全<%= @items.count %>件)</small></h2>
        </div>
      </div>
      <div class="row mt-3">
        <% @items.each do |items| %>
          <div class="col-2 mx-4">
            <div class="row bg-light">
              <%= link_to item_path(items.id), class: "d-block mx-auto" do %>
                <%= image_tag items.get_item_image(256,144) %>
              <% end %>
            </div>
            <div class="row mt-1">
              <%= link_to item_path(items.id), class: "text-body" do %>
                <%= items.name %>
              <% end %>
            </div>
            <div class="row mt-1">
              ¥<%= items.price.to_s(:delimited) %>
            </div>
          </div>
        <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</div>