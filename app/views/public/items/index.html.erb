<div class="container-fluid">
  <div class="row mx-3">
    <div class="col-2 bg-secondary">
      <p>ジャンル検索</p>
    </div>
    <div class="col-9 mx-3 bg-secondary">
      <div class="row">
        <div class="col-2">
          <h2>商品一覧</h2>
        </div>
      </div>
      <div class="row mt-3 mr-3">
        <% @items.each do |items| %>
          <div class="col-3">
            <div class="row bg-light">
              <%= link_to item_path(items.id), class: "d-block mx-auto" do %>
                <%= image_tag items.get_item_image(256,144) %>
              <% end %>
            </div>
            <div class="row mt-1">
              <%= link_to item_path(items.id), class: "text-body" do %>
                <%= items.name %>
              <% end %>
            </div>
            <div class="row mt-1">
              ¥<%= items.price.to_s(:delimited) %>
            </div>
          </div>
        <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</div>