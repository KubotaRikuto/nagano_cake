<div class="container">
  <div class="row mt-3">
    <div class="offset-1">
      <h5><span class="px-3 bg-secondary text-light">ログイン</span></h5>
    </div>
  </div>

  <div class="row">
    <div class="offset-1 col-11">
      <div class="row">
        <p class="mt-3 mx-3 mb-0 px-3 bg-secondary text-light">会員の方はこちらからログイン</p>
      </div>


      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mt-3 form-group row">
          <%= f.label :email, class: "offset-1 col-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "col-4" %>
        </div>

        <div class="form-group row">
            <%= f.label :password, class: "offset-1 col-2" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "col-4" %>
        </div>

        <div class="mt-4 row">
          <div class="offset-3 col-2 px-0">
            <%= f.submit "ログイン",class: "px-4 btn btn-sm btn-primary" %>
          </div>
        </div>
      <% end %>
      <div class="mt-4 row">
        <p class="mt-3 mx-3 mb-0 px-3 bg-secondary text-light">会員登録がお済でない方</p>
      </div>
      <div class="mt-3 row">
        <div class="offset-1">
          <p class="ml-5">
            <%= render "public/shared/links" %>
            から新規登録してください。
          </p>
        </div>
      </div>

    </div>
  </div>
</div>