              <!-- サインアウト -->
              <% else %>
                <li>
                  <%= link_to about_path, class: 'navbar-link navbar-item btn btn-sm btn-outline-light mr-3 text-light' do %>
                    About
                  <% end %>
                </li>
                <li>
                  <%= link_to items_path, class: 'navbar-link navbar-item btn btn-sm btn-outline-light mr-3 text-light' do %>
                    商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_registration_path, class: 'navbar-link navbar-item btn btn-sm btn-outline-light mr-3 text-light' do %>
                    新規登録
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_session_path, class: 'navbar-link navbar-item btn btn-sm btn-outline-light mr-3 text-light' do %>
                    ログイン
                  <% end %>
                </li>
              <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <!-- メイン -->
    <main>
      <%= yield %>
    </main>
    <!-- フッター -->
