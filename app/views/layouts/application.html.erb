                  <% end %>
                </li>
                <li>
                  <%= link_to admin_customers_path, class: 'navbar-link navbar-item btn btn-sm btn-outline-light mr-3 text-light' do %>
                    会員一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_path, class: 'navbar-link navbar-item btn btn-sm btn-outline-light mr-3 text-light' do %>
                    注文一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_genres_path, class: 'navbar-link navbar-item btn btn-sm btn-outline-light mr-3 text-light' do%>
                    ジャンル一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_admin_session_path, method: :delete, class: 'navbar-link navbar-item btn btn-sm btn-outline-light mr-3 text-light' do %>
